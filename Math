import java.util.Scanner; 
public class Main { 
    public static void main(String [] args) { 
        Scanner sc = new Scanner(System.in); 

        //Input a and b
        System.out.print("Enter a: "); 
        float a = sc.nextFloat(); 
        System.out.print("Enter b: "); 
        float b = sc.nextFloat(); 

        //Calculate a and b
        float A = a + b; 
        int intA = (int) A; //Coerce variable type

        float B = a - b; 
        int intB = (int) B;

        float C = a * b;
        int intC = (int) C;

        float D = a / b; 
        
        float E = a % b; 
        int intE = (int) E;

        //Print screen
        System.out.println("a + b = " + intA); 
        System.out.println("a - b = " + intB); 
        System.out.println("a * b = " + intC); 
        System.out.println("a / b = " + D); 
        System.out.println("a % b = " + intE); 
    } 
}
